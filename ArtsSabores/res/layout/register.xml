<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <!-- Header  Starts -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/braid_darck" >

        <ImageView
            android:id="@+id/imgPackage3"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/imgPackage_layout_height2"
            android:contentDescription="@string/app_name"
            android:padding="40dp"
            android:src="@drawable/arts_sabores" />

        <!-- Logo Ends -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imgPackage3"
            android:background="@color/braid_darck"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <!-- android:background="@drawable/linearlayout_bg" -->

            <LinearLayout
                android:id="@+id/linerar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/reg_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_top_bg"
                    android:drawableLeft="@drawable/user"
                    android:hint="Nome"
                    android:padding="10dp"
                    android:textColorHint="#bbbbbb" />
                <!-- Email Label -->

                <EditText
                    android:id="@+id/reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/edittext_default_bg"
                    android:drawableLeft="@drawable/email"
                    android:hint="Email"
                    android:padding="10dp"
                    android:textColorHint="#bbbbbb" />
                <!-- Addres Label -->

                <EditText
                    android:id="@+id/endereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/edittext_default_bg"
                    android:drawableLeft="@drawable/ic_action_about"
                    android:hint="EndereÃ§o"
                    android:padding="10dp"
                    android:textColorHint="#bbbbbb" />
                <!-- Password Label -->

                <EditText
                    android:id="@+id/reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/edittext_bottom_bg"
                    android:drawableLeft="@drawable/password"
                    android:hint="Senha"
                    android:padding="10dp"
                    android:password="true"
                    android:textColorHint="#bbbbbb" />
                <!-- Register Button -->

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_default_bg"
                    android:padding="10dp"
                    android:text="Registrar" />
                <!-- Link to Login Screen -->

                <TextView
                    android:id="@+id/link_to_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dip"
                    android:layout_marginTop="40dip"
                    android:gravity="center"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="20dip" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>